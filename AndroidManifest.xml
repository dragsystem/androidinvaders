<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="1" android:versionName="1.0"
	package="edu.tufts.cs.mchow">
	<application android:name="edu.tufts.cs.mchow.Game.TriageApplication"
		android:theme="@android:style/Theme.NoTitleBar"
		android:debuggable="true"
		android:icon="@drawable/ship1">
		<activity android:name="edu.tufts.cs.mchow.Menu.MainMenu"
			android:label="@string/app_name"
			 android:screenOrientation="landscape" 
			 android:configChanges="orientation|keyboardHidden"
			 android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="edu.tufts.cs.mchow.Menu.CreditsScreen"
			android:screenOrientation="landscape" 
			android:configChanges="orientation|keyboardHidden"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
		<activity
			android:name="edu.tufts.cs.mchow.Menu.HelpScreen"
			android:screenOrientation="landscape" 
			android:configChanges="orientation|keyboardHidden"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
		<activity
			android:name="edu.tufts.cs.mchow.Menu.PlayMenu"
			android:screenOrientation="landscape" 
			android:configChanges="orientation|keyboardHidden"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
			android:launchMode="singleTop"/>
		<activity
			android:name="edu.tufts.cs.mchow.Menu.HighScoreScreen"
			android:screenOrientation="landscape" 
			android:configChanges="orientation|keyboardHidden"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
		<activity
			android:name="edu.tufts.cs.mchow.Menu.WinScreen"
			android:screenOrientation="landscape" 
			android:configChanges="orientation|keyboardHidden"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
		<activity
			android:name="edu.tufts.cs.mchow.Menu.LoseScreen"
			android:screenOrientation="landscape" 
			android:configChanges="orientation|keyboardHidden"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
		<activity
			android:name="edu.tufts.cs.mchow.Menu.ChooseDifficultyScreen"
			android:screenOrientation="landscape" 
		 	android:configChanges="orientation|keyboardHidden"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
		<activity
			android:name="edu.tufts.cs.mchow.Game.AndroidInvaders"
			android:screenOrientation="landscape" 
			android:configChanges="orientation|keyboardHidden"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
		<activity
			android:name="edu.tufts.cs.mchow.Settings.SettingsScreen"
			android:screenOrientation="landscape" 
			android:configChanges="orientation|keyboardHidden"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
		<activity
			android:name="edu.tufts.cs.mchow.Game.PlanetEndBonusActivity"
			android:screenOrientation="landscape" 
			android:configChanges="orientation|keyboardHidden"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
			

	</application>
	<uses-sdk android:minSdkVersion="3" />


</manifest> 